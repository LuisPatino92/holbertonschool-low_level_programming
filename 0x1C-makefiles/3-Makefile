#Variables, intended for easy changes
CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f

#Compile all the .c files to obtain .o files, then an executable named as NAME
all: re

#Deletes erditors temporary files
clean:
	-$(RM) *~ $(NAME)

#Deletes object files (.o)
oclean: $(OBJ)
	-$(RM) $(OBJ)

#Full Clean (Temporary, Objecs and Binary)
fclean:
	-$(RM) *~ $(NAME)
	-$(RM) $(OBJ)

#Forces the recompilation of all source files
re:
	$(CC) -c $(SRC)
	$(CC) $(OBJ) -o $(NAME)
