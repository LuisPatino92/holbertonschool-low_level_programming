CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton

#Compile all the .c files to obtain an executable named holberton

all: $(NAME)


$(NAME): $(OBJ)
	$(CC) $(OBJ) -o holberton

main.o: main.c
	$(CC) -c -o main.o main.c

holberton.o: holberton.c
	$(CC) -c -o holberton.o holberton.c

